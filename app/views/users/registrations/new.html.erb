<section class="user-login">
  <div class="container">
    <div class="row justify-content-center align-items-center">
      <div class="col-12 col-md-6">
        <div class="card p-4 shadow">
          <h3 class="card-title text-center mb-4">Cadastrar</h3>
          <%= form_for(resource, as: resource_name, url: user_registration_path) do |f| %>
            <%= render "users/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :name %>
              <%= f.text_field :name, autofocus: true, autocomplete: "name", placeholder: 'Ex: Pedro Souza', class: 'form-control' %>
            </div>

            <div class="form-group">
              <%= f.label :email %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: 'Ex: pedro@mail.com', class: 'form-control'  %>
            </div>

            <div class="form-group">
              <%= f.label :password %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", placeholder: '******', class: 'form-control'  %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: '******', class: 'form-control'  %>
            </div>

            <div class="form-group">
              <%= f.submit "Criar conta", class: 'btn btn-success btn-block font-weight-bold' %>
            </div>
          <% end %>

          <%= render "users/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</section>
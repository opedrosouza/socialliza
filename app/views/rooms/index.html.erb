<section class="rooms">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <%= link_to 'Adicionar nova sala', new_room_path, class: 'btn btn-success font-weight-bold shadow' %>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        <div class="table-responsive">
          <table class="table table-striped table-hover">
            <thead class="bg-dark text-light">
              <tr>
                <th scope="col">#</th>
                <th scope="col">Nome</th>
                <th scope="col">Ac√µes</th>
              </tr>
            </thead>
            <tbody>
              <% @rooms&.each do |room| %>
                <tr>
                  <th scope="row"><%= room.id %></th>
                  <td><%= room.name %></td>
                  <td>
                    <div class="btn-group" role="group" aria-label="Basic example">
                      <%= link_to 'Entrar', room_path(room), class: 'btn btn-success btn-sm' %>
                      <%= link_to 'Editar', edit_room_path(room), class: 'btn btn-primary btn-sm' %>
                      <%= link_to 'Excluir', room_path(room), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
                    </div>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="col-12 mt-4">
        <%= will_paginate @rooms, list_classes: %w(pagination justify-content-end) %>
      </div>
    </div>
  </div>
</section>
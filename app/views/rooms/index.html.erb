<section class="rooms">
  <div class="container">
    <div class="row mb-4">
      <div class="col-12">
        <%= link_to 'Adicionar nova sala', new_room_path, class: 'btn btn-success font-weight-bold shadow' %>
      </div>
    </div>
    <div class="row">
      <% @rooms&.each do |room| %>
        <div class="col-12 col-md-4 col-lg-3">
          <%= link_to room_path(room) do %>
            <div class="card p-4 shadow">
              <h3><%= room.name %></h3>
              <div class="card-footer">
                <%= link_to 'Entrar', room_path(room), class: 'btn btn-success btn-sm' %>
                <%= link_to 'Editar', edit_room_path(room), class: 'btn btn-primary btn-sm' %>
                <%= link_to 'Excluir', room_path(room), method: :delete, data: { confirm: 'Tem certeza?' }, class: 'btn btn-danger btn-sm' %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>